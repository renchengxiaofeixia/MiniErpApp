.storage {
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.storage .salesman {
  border-top: 1rpx solid #ccc;
  padding: 14rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.storage .salesman .iconfont {
  color: #2ea469;
  background-color: #efeef3;
  padding: 4rpx 4rpx;
  border-radius: 2rpx;
}
.dialog {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
}
.dialog .cover {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.dialog .content {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 9;
  width: 600rpx;
  height: 420rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 14rpx;
  overflow: hidden;
}
.dialog .content .title {
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}
.dialog .content .suggest {
  display: flex;
  align-items: center;
  margin: 14rpx 20rpx;
  height: 70rpx;
}
.dialog .content .suggest text {
  font-size: 28rpx;
  width: 130rpx;
}
.dialog .content .suggest input {
  flex: 1;
  border: 1rpx solid #ccc;
  height: 100%;
  padding: 0 20rpx;
  border-radius: 8rpx;
}
.dialog .content .salesman-btn {
  display: flex;
  align-items: center;
}
.dialog .content .salesman-btn button {
  flex: 1;
  border-radius: 0;
  border-top: 1rpx solid #ccc;
}
.dialog .content .salesman-btn button:nth-child(1) {
  border-right: 1rpx solid #ccc;
}

