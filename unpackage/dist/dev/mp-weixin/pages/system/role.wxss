.goods-list {
  padding-top: 20rpx;
}
.track {
  padding-top: 10rpx;
}
.shove {
  padding: 20rpx 0;
}
.phone {
  border-radius: 50%;
  border: 1rpx solid #2ea469;
  width: 92rpx;
  text-align: center;
  color: #2ea469;
  font-size: 24rpx;
  padding: 12rpx 0;
}
.phone .iconfont {
  color: #2ea469;
  font-size: 36rpx;
}
.role {
  padding: 14rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.role .iconfont {
  color: #2ea469;
  background-color: #efeef3;
  padding: 4rpx 4rpx;
  border-radius: 2rpx;
}
.role-pup {
  position: fixed;
  top: 0;
  z-index: 99;
}
.role-pup .role-cover {
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 100%;
}
.role-pup .role-box {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 600rpx;
  height: 400rpx;
  background-color: #fff;
  z-index: 2;
  border-radius: 10rpx;
}
.role-pup .role-box .theme {
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.role-pup .role-box .enter {
  margin: 0 40rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
}
.role-pup .role-box .enter text {
  width: 120rpx;
  text-align: center;
}
.role-pup .role-box .enter input {
  border: 1rpx solid #ccc;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.role-pup .role-box .role-bnt {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
}
.role-pup .role-box .role-bnt button {
  width: 120rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #fff;
}

