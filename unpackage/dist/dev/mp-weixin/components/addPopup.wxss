.popup {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
}
.popup .mask {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.popup .layer {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  background-color: #fff;
  width: 540rpx;
  height: 310rpx;
  border-radius: 14rpx;
  overflow: hidden;
}
.popup .layer .popup-title {
  font-size: 28rpx;
  padding: 40rpx 0;
  text-align: center;
}
.popup .layer input {
  margin: 0 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 16rpx 12rpx;
}
.popup .layer .popup-bnt {
  display: flex;
  align-items: center;
  border-top: 1rpx solid #ccc;
  margin-top: 40rpx;
}
.popup .layer .popup-bnt button {
  flex: 1;
  font-size: 30rpx;
  border-radius: 0;
}
.popup .layer .popup-bnt button:nth-child(1) {
  border-right: 1rpx solid #ccc;
}

