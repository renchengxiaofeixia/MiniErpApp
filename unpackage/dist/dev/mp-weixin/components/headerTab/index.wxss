.header {
  width: 100%;
  box-sizing: border-box;
}
.header .header-bar {
  width: 100%;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  background-color: #2ea469;
  z-index: 99;
}
.header .header-bar .header-tab {
  display: flex;
  justify-content: center;
}
.header .header-bar .header-tab .header-center {
  border-radius: 10rpx;
  border: 1rpx solid #8aad86;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
}
.header .header-bar .header-tab .header-center text {
  padding: 10rpx 30rpx;
  white-space: nowrap;
}
.header .header-bar .header-tab .header-center .selector {
  background-color: #fff;
  color: #4d996d;
  border-radius: 10rpx;
}
.header .header-bar .header-fixed {
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: space-between;
  margin-left: 30rpx;
  width: 690rpx;
}
.header .header-bar .header-fixed .iconfont {
  font-size: 38rpx;
}
.header .header-bar .header-fixed .header-tilte {
  font-size: 30rpx;
  margin: auto;
}

