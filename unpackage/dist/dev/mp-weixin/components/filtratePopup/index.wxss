.filtrate {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.filtrate .mask {
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.filtrate .layer {
  position: fixed;
  top: 0;
  right: 0;
  width: 710rpx;
  height: 100%;
  background-color: #fff;
}
.filtrate .layer .header-bar {
  display: flex;
  align-items: center;
}
.filtrate .layer .header-bar .icon-guanbi {
  color: #fff;
  font-size: 42rpx;
  margin-left: 30rpx;
}
.filtrate .layer .header-bar .header-text {
  flex: 1;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
}
.filtrate .layer .content {
  background-color: #efeef3;
  height: 100%;
}
.filtrate .layer .btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #ccc;
  padding-top: 20rpx;
}
.filtrate .layer .btn button {
  margin-left: 20rpx;
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}
.filtrate .layer .btn .cancel {
  border-radius: 6rpx;
  border: 1rpx solid #eee;
}
.filtrate .layer .btn .confirm {
  margin-right: 20rpx;
}
/* 动画 */
.show {
  display: block;
}
.show .mask {
  -webkit-animation: showPopup 0.5s linear both;
          animation: showPopup 0.5s linear both;
}
.show .layer {
  -webkit-animation: showLayer 0.5s linear both;
          animation: showLayer 0.5s linear both;
}
.hide .mask {
  -webkit-animation: hidePopup 0.6s linear both;
          animation: hidePopup 0.6s linear both;
}
.hide .layer {
  -webkit-animation: hideLayer 0.6s linear both;
          animation: hideLayer 0.6s linear both;
}
.none {
  display: none;
}
@-webkit-keyframes showPopup {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@keyframes showPopup {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@-webkit-keyframes hidePopup {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@keyframes hidePopup {
0% {
    opacity: 1;
}
100% {
    opacity: 0;
}
}
@-webkit-keyframes showLayer {
0% {
    -webkit-transform: translateX(120%);
            transform: translateX(120%);
}
100% {
    -webkit-transform: translateX(0%);
            transform: translateX(0%);
}
}
@keyframes showLayer {
0% {
    -webkit-transform: translateX(120%);
            transform: translateX(120%);
}
100% {
    -webkit-transform: translateX(0%);
            transform: translateX(0%);
}
}
@-webkit-keyframes hideLayer {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(120%);
            transform: translateX(120%);
}
}
@keyframes hideLayer {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(120%);
            transform: translateX(120%);
}
}

